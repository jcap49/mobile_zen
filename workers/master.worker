runtime "ruby"

# name the worker
name "Master"

# include all the gems
gem "iron_worker_ng"
merge_gem 'activerecord'
merge_gem 'pg'
merge_gem 'twilio-ruby'

# make sure pg is good to go
full_remote_build true 

# include iron.io and twilio settings
file "../config/application.yml"

# include text message model
dir "../app/models" 

# worker file to be executed
exec "master.rb"